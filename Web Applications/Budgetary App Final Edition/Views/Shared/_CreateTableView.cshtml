@model IEnumerable<Budgetary_App_Final_Edition.Models.Bills>

@{
    ViewData["Title"] = "Index";
}


    <div class="col-md-12">
        <section class="position-relative py-4 py-xl-5">
            <div class="container position-relative">
                <div class="row d-flex justify-content-center">
                    <div class="col-xxl-12 card card mb-5">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table tablesorter" id="ipi-table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th class="text-center">id</th>
                                        <th class="text-center">Name</th>
                                        <th class="text-center">Category</th>
                                        <th class="text-center">Amount</th>
                                        <th class="text-center">Starting Budget</th>
                                        <th class="text-center">Daily Budget</th>
                                        <th class="text-center">Date</th>
                                        <th class="text-center filter-false sorter-false">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="text-center">
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.id)</td>
                                            <td>@Html.DisplayFor(modelItem => item.name)</td>
                                            <td>@Html.DisplayFor(modelItem => item.category)</td>
                                            <td>@Html.DisplayFor(modelItem => item.amount)</td>
                                            <td>@Html.DisplayFor(modelItem => item.startingBudget)</td>
                                            <td>@Html.DisplayFor(modelItem => item.dailyBudget)</td>
                                            <td>@item.date.ToString("MMMM dd yyyy")</td>
                                            <td class="text-center align-middle">
                                                <a class="btn btnMaterial btn-flat success semicircle" role="button" asp-route-id="@item.id" asp-controller="Bills" asp-action="BillsEdit">
                                                    <i class="fas fa-pen"></i>
                                                </a>
                                                <a class="btn btnMaterial btn-flat accent btnNoBorders checkboxHover" role="button" style="margin-left: 5px;" asp-route-id="@item.id" asp-controller="Bills" asp-action="BillsDelete">
                                                    <i class="fas fa-trash btnNoBorders" style="color: #DC3545;"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div>
                            <button class="btn btn-primary d-block w-100" type="submit" style="background: var(--bs-secondary-bg); margin-top: 30px; margin-bottom: 30px;">Generate Reports</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
