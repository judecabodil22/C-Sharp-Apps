@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Budgetary - Expense Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <!-- Hero Section -->
    <section id="hero-section" class="hero text-center py-5">
        <div class="container">
            <h1>Welcome to Budgetary</h1>
            <p class="lead">Track your expenses, set budgets, and manage your finances with ease.</p>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light btn-lg">Get Started</a>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features-section" class="features text-center py-5">
        <div class="container">
            <h2>Key Features</h2>
            <div class="row mt-4">
                <div class="col-md-4">
                    <div id="expense-tracking" class="feature">
                        <h3>Expense Tracking</h3>
                        <p>Effortlessly track your spending and categorize your expenses.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div id="budget-setting" class="feature">
                        <h3>Budget Setting</h3>
                        <p>Set monthly or biweekly budgets to stay on track with your finances.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div id="reporting" class="feature">
                        <h3>Reporting</h3>
                        <p>Generate detailed reports to analyze your spending habits and financial trends.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
